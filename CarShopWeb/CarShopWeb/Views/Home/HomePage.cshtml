@model CarShopWeb.Models.AllCarsModel
@using System.Linq;
@{
    var cars = Model.cars.ToList();
}

<style>
    footer {
        background-color: crimson;
        height: 70px;
        margin-top: 30px;
        text-align: right;
        font-size: 20px;
        padding-right: 20px;
        color: darkblue;
    }

    header {
        background: url(HeaderBackground.jpg) no-repeat;
        background-size: cover;
        background-position: center;
        height: 150px;
        margin-bottom: 30px;
        font-size: 20px;
        padding-top: 20px;
        color: paleturquoise;
        border: 6px solid darkslategrey;
    }

    

    body {
        background: url(BodyBackground.jpg) no-repeat;
        background-size: cover;
        background-position: center;
        line-height: 1;
    }

    .home {
        float: left;
        padding-top: 20px;
        padding-bottom: 20px;
        padding-right: 30px;
        padding-left: 30px;
    }

    .HeaderText {
        float: right;
        padding-right: 20px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    .slideshow-container {
        max-width: 1000px;
        position: relative;
        margin: auto;
    }
    
    .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        margin-top: -22px;
        padding: 16px;
        color: white;
        font-weight: bold;
        font-size: 18px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
    }

    .next {
        right: 0;
        border-radius: 3px 0 0 3px;
    }

    .prev:hover, .next:hover {
        background-color: white;
    }

    .SlideText {
        color: #f2f2f2;
        font-size: 12px;
        position: absolute;
        text-align: center;
    }

    .SlideTextContainer{
        position: relative;
        border: 4px groove white;
        background-color: brown;
        width: 100%;
        padding: 20px;
    }


    .dot {
        cursor: pointer;
        height: 13px;
        width: 13px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

    .active dot:hover {
        background-color: #717171;
    }


</style>

<body onload="addFromBd()">
    <header>
        <div class="home"><img src="~/HomeIcon.png" height="40" width="70" /></div>
        <div class="HeaderText"><h2>Лучшие авто - только тут</h2></div>
    </header>
    
    <div class="front">

        <div class="slideshow-container">
            <div class="MySlides carousel-fade">
                <img src="~/AudiA6.jpg" class="img" style=" width: 100%; height: 700px" alt="">
                <div class="SlideText SlideTextContainer">Этот немец - гарант надежности и качества</div>
            </div>
            <div class="MySlides carousel-fade">
                <img src="~/LexusLS460.jpg" class="img" style="width: 100%; height: 700px " alt="">
                <div class="SlideText SlideTextContainer">Этот дорогущий авто от фирмы Лексус</div>
            </div>
            <div class="MySlides carousel-fade">
                <img src="~/Mazda2.jpg" class="img" style="width: 100%; height: 700px" alt="">
                <div class="SlideText SlideTextContainer">Эта красненькая машина от фирмы мазда</div>
            </div>

            <a class="prev" onclick="plusSlides(-1)">&#10094</a>
            <a class="next" onclick="plusSlides(1)">&#10095</a>
            <br>

        </div>
    </div>
    

        <footer>
            <div>Creating By Prykhach Ilya</div>
        </footer>
</body>

<script>

    function addFromBd() {

        var model = @Json.Serialize(cars);
        for (let i = 0; i < model.length; i++) {
        //alert(model[i].value);
        }
    }

    var slideIndex = 1;
    showSlides(slideIndex);

    function plusSlides(n) {
        showSlides(slideIndex += n);
    }

    function currentSlide(n) {
        showSlides(slideIndex = n);
    }

    function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("MySlides");

        if (n > slides.length) {
            slideIndex = 1;
        }
        if (n < 1) {
            slideIndex = slides.length;
        }
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        
        slides[slideIndex - 1].style.display = "block";

    }

</script>


